<div class="container">
  <% if current_user.bakery.nil? %>
    <h1 class = "text-center m-3">Dashboard</h1>
  <% else %>
    <h1 class = "text-center m-3">Dashboards</h1>
    <!-- dropdown -->
    <%= render 'dashboard_selector' %>
  <% end %>
  <!-- Baker Dashboard -->
  <% if @baker_orders.any? %>
    <%= render 'dashboard_baker' %>
  <% end %>
  <!-- Customer Dashboard -->
  <% if @customer_orders.any? %>
    <%= render 'dashboard_customer' %>
  <% end %>
</div>